<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.canvas.Canvas?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ViewModel.MainViewModel">
    <top>
        <!-- メニュー項目 -->
        <MenuBar>
            <Menu text="ファイル(_F)">
                <MenuItem fx:id="ExitMenu" text="終了(_X)" />
            </Menu>
            <Menu text="ヘルプ(_H)">
                <MenuItem fx:id="AboutMenu" text="バージョン情報(_A)" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <Canvas fx:id="TaskBoard" height="800.0" width="800.0" />
         </content>
        </ScrollPane>
    </center>
    <bottom>
        <Label fx:id="StatusMessage" prefHeight="36.0" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font></Label>
    </bottom>
</BorderPane>
